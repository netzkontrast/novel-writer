{
  "version": "1.0",
  "connector_phrases": [
    "Firstly", "Secondly", "Furthermore", "Then", "However", "In conclusion", "In summary",
    "To some extent", "As is well known", "Currently", "With the"
  ],
  "empty_phrases": [
    "widespread attention", "sparked heated debate", "profound impact", "of great significance", "effectively enhance",
    "has a certain guiding significance", "worth our consideration"
  ],
  "cliche_pairs": [
    ["There's no such thing as easy success", "Describe a specific time you gritted your teeth and pushed through."],
    ["Persistence is victory", "Write about the most grueling action and smell of that persistence."]
  ],
  "sentence_length": {
    "max_run_long": 4,
    "max_run_short": 5,
    "short_threshold": 12,
    "long_threshold": 35
  },
  "abstract_nouns": [
    "value", "significance", "cognition", "system", "model", "path", "methodology", "trend"
  ],
  "min_concrete_details": 3
}
